<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5sp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
        android:background="#DAE0E2">


            <TextView
                android:id="@+id/namekey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#2C3335"
                android:textStyle="bold"
                android:background="#DAE0E2"/>

        <TextView
            android:id="@+id/editTxtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namekey"
            android:background="#DAE0E2"
            android:text="Hello World"
            android:textAlignment="center"
            android:textColor="#E8290B"
            android:textSize="15sp"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/emailkey"
                android:layout_below="@+id/editTxtName"
                android:layout_marginTop="1sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#2C3335"
                android:textStyle="bold"
                android:background="#DAE0E2"/>

            <TextView
                android:id="@+id/editTxtEmail"
                android:layout_below="@+id/emailkey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello@gmail.com"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#E8290B"
                android:textStyle="bold"
                android:background="#DAE0E2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTxtEmail"
                android:id="@+id/btnsLayout"
                android:orientation="horizontal"
                android:background="#DAE0E2"
                android:layout_marginTop="1sp"
                android:layout_marginBottom="3sp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update"
                    android:background="#75DA8B"
                    android:id="@+id/btnUpdate"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:background="#E84342"
                    android:id="@+id/btnDelete"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>



            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>